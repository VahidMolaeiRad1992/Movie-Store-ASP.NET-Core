<div>
    @if (!User.IsInRole("admin"))
    {
    <form asp-action="BuyMovie">
        <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>
        <input type="hidden" asp-for="ID" />
        @*<input type="submit" value="Buy" class="btn btn-sm btn-primary" />*@
        <a class="btn btn-sm btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-movieId="@Model.ID">Buy</a>

    </form>
    }

    @if (User.IsInRole("admin"))
    {
        <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>
        <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@Model.ID">Edit</a>
    }
